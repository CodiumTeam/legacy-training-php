# EditorConfig is awesome: https://editorconfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[Makefile]
indent_style = tab
indent_size = 4

[*.php]
indent_style = space
indent_size = 4

[*.xml]
indent_style = space
indent_size = 2

[*.xml.dist]
indent_style = space
indent_size = 2
